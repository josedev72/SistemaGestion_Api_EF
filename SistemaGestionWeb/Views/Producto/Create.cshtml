@model SistemaGestionWeb.Models.ProductoViewModel

<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Crear Producto</h5>
    </div>
    <div class=" card-body text-center">
        <div class=" col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Campos *@
                <div class="form-group">
                    <label></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripcion">
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Costo" class="form-control" placeholder="Costo">
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="PrecioVenta" class="form-control" placeholder="PrecioVenta">
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Stock" class="form-control" placeholder="Stock">
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="IdUsuario" class="form-control" placeholder="IdUsuario">
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                @* Botones *@
                <div class=" card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>