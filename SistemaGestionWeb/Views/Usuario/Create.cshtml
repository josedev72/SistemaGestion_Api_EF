@model SistemaGestionWeb.Models.UsuarioViewModel

<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Crear Usuario</h5>
    </div>
    <div class=" card-body text-center">
        <div class=" col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Campos *@
                <div class="form-group">
                    <label></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Apellido" class="form-control" placeholder="Apellido">
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="NombreUsuario">
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Contrasenia" class="form-control" placeholder="Contrasenia">
                    <span asp-validation-for="Contrasenia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Mail" class="form-control" placeholder="Mail">
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                @* Botones *@
                <div class=" card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

